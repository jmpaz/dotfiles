//  https://zed.dev/docs/configuring-zed
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_multiline_find": true
  },
  "relative_line_numbers": true,
  "cursor_blink": false,

  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "experimental.theme_overrides": {
    "syntax": {
      "property": {
        "font_weight": 700
      }
    }
  },

  "terminal": {
    // "font_size": 17,
    "font_weight": 500,
    "shell": {
      "with_arguments": {
        "program": "env",
        "args": ["SKIP_ZELLIJ=1", "fish"]
      }
    }
  },

  "assistant": {
    "version": "1",
    "provider": {
      "default_model": {
        "name": "codestral:latest",
        "max_tokens": 16384,
        "keep_alive": -1
      },
      "name": "ollama",
      "low_speed_timeout_in_seconds": null
    }
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  }
}
