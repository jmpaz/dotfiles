//  https://zed.dev/docs/configuring-zed
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_multiline_find": true
  },
  "relative_line_numbers": true,
  "cursor_blink": false,

  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "experimental.theme_overrides": {
    "syntax": {
      "property": {
        "font_weight": 700
      }
    }
  },

  "terminal": {
    // "font_size": 17,
    "font_weight": 500,
    "shell": {
      "with_arguments": {
        "program": "env",
        "args": ["SKIP_ZELLIJ=1", "fish"]
      }
    }
  },

  "assistant": {
    "version": "1",
    "provider": {
      "name": "openai",
      "type": "openai",
      "default_model": "gpt-4o",
      "api_url": "http://localhost:4020/v1"
    }
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "language_overrides": {
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    }
  }
}
