//  https://zed.dev/docs/configuring-zed
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },

  "outline_panel": {
    "default_width": 350
  },

  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_code_navigation": true
  },

  "gutter": {
    // "folds": false,
    "code_actions": false
  },
  "inlay_hints": {
    "enabled": true
  },

  "active_pane_magnification": 1.2,
  "current_line_highlight": "gutter",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": true,

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_multiline_find": true
  },
  "relative_line_numbers": true,
  "cursor_blink": false,

  "theme": {
    "mode": "light",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "buffer_font_family": "Maple Mono NF",
  "ui_font_family": "Hack Nerd Font",
  "ui_font_size": 18,
  "buffer_font_size": 19,
  "experimental.theme_overrides": {
    "syntax": {
      "property": {}
    }
  },

  "private_files": [
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml",
    "**/secrets.txt"
  ],

  "terminal": {
    // "font_size": 17,
    "button": false,
    "font_weight": 500,
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/fish",
        "args": ["-c", "set -x SKIP_TMUX 1; direnv reload; exec fish"]
      }
    }
  },

  "collaboration_panel": {
    "button": false
  },

  "chat_panel": {
    "button": false
  },

  "features": {
    "inline_completion_provider": "supermaven"
  },
  "assistant": {
    "button": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620-fast-edit"
    },
    "version": "2",
    "provider": null
  },
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },

  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },

  "jupyter": {
    "enabled": true,
    "kernel_selections": {}
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },

  "middle_click_paste": false,

  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {}
      }
    }
  }
}
