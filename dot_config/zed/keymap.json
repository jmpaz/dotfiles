[
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "ctrl-w -": "pane::SplitDown",
      "ctrl-w |": "pane::SplitRight",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-alt-h": ["workspace::SwapPaneInDirection", "Left"],
      "ctrl-alt-j": ["workspace::SwapPaneInDirection", "Down"],
      "ctrl-alt-k": ["workspace::SwapPaneInDirection", "Up"],
      "ctrl-alt-l": ["workspace::SwapPaneInDirection", "Right"],
      "ctrl-w shift-h": "zed::NoAction",
      "ctrl-w shift-l": "zed::NoAction",
      "ctrl-w shift-k": "zed::NoAction",
      "ctrl-w shift-j": "zed::NoAction"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-j": "zed::NoAction"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "\\ w": "editor::ToggleSoftWrap",
      "\\ n": "editor::ToggleLineNumbers",
      "shift-h": "pane::ActivatePrevItem",
      "shift-l": "pane::ActivateNextItem",
      "space e": "workspace::ToggleLeftDock",
      "space f": "file_finder::Toggle",
      "space s g": "pane::DeploySearch",
      "space p": "outline::Toggle",
      "space v": "editor::GoToDefinitionSplit",
      "ctrl-w z": "workspace::ToggleZoom",
      "ctrl-w t": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "w": "vim::NextSubwordStart",
      "b": "vim::PreviousSubwordStart",
      "e": "vim::NextSubwordEnd",
      "g e": "vim::PreviousSubwordEnd",

      "g shift-r": "editor::FindAllReferences",
      "g a": "editor::ToggleCodeActions",
      "g r": "editor::Rename",
      "\\ g b": "editor::ToggleGitBlame",
      "\\ g d": "editor::ToggleHunkDiff",

      "space l l": "diagnostics::Deploy",
      "space l a": "editor::ToggleCodeActions",
      "space l r": "editor::Rename",
      "space l f": "editor::Format",
      "space w": "workspace::Save"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "g y": "editor::Copy",
      "g d": "editor::Cut"
    }
  },
  {
    "context": "Editor && !VimWaiting && !menu",
    "bindings": {
      "ctrl-shift-c": "editor::Copy",
      "ctrl-shift-x": "editor::Cut",
      "ctrl-shift-v": "editor::Paste"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletion"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-\\": "workspace::ToggleLeftDock",
      "ctrl-alt-\\": "workspace::ToggleRightDock",
      "ctrl-shift-\\": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "space": null,
      "space e": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      "r": "project_panel::Rename",
      "d": "project_panel::Trash",
      "g y": "project_panel::CopyPath",
      "g shift-y": "project_panel::CopyRelativePath",
      "shift-o": "project_panel::RevealInFinder"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-w": "terminal_panel::ToggleFocus",
      "ctrl-h": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-w": null
    }
  }
]
