#!/usr/bin/env sh

ctrl + fn - r : skhd --restart-service

# alt - return : open -na "/Applications/kitty.app" ~
# alt - w : open -na "Firefox"

fn - h : aerospace focus left
fn - j : aerospace focus down
fn - k : aerospace focus up
fn - l : aerospace focus right

fn + ctrl - h : aerospace move left
fn + ctrl - j : aerospace move down
fn + ctrl - k : aerospace move up
fn + ctrl - l : aerospace move right

fn - s : aerospace layout v_accordion
fn - w : aerospace layout h_accordion
fn - e : aerospace layout tiles horizontal vertical  # toggle split
fn - r : aerospace mode resize

fn - f : aerospace fullscreen
alt - f : aerospace layout floating tiling  # toggle floating window

fn - 1 : aerospace workspace 1
fn - 2 : aerospace workspace 2
fn - 3 : aerospace workspace 3
fn - 4 : aerospace workspace 4
fn - 5 : aerospace workspace 5
fn - 6 : aerospace workspace 6
fn - 7 : aerospace workspace 7
fn - 8 : aerospace workspace 8
fn - 9 : aerospace workspace 9
fn - 0 : aerospace workspace 10

shift + fn - 1 : aerospace move-node-to-workspace 1
shift + fn - 2 : aerospace move-node-to-workspace 2
shift + fn - 3 : aerospace move-node-to-workspace 3
shift + fn - 4 : aerospace move-node-to-workspace 4
shift + fn - 5 : aerospace move-node-to-workspace 5
shift + fn - 6 : aerospace move-node-to-workspace 6
shift + fn - 7 : aerospace move-node-to-workspace 7
shift + fn - 8 : aerospace move-node-to-workspace 8
shift + fn - 9 : aerospace move-node-to-workspace 9
shift + fn - 0 : aerospace move-node-to-workspace 10
